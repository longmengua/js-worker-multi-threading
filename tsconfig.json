{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "src"
    ]
}
{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "sourceMap": true,
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ]
}